
import os.path


Import(['env', 'tibeecomparelib'])

target = 'tibeebuild'

libs = [
    tibeecomparelib,
    'delorean',
    'tigerbeetle',
    'boost_program_options',
    'boost_filesystem',
    'boost_thread',
    'boost_system',
    'boost_regex',
    'yaml-cpp',
    'leveldb',
    'elf',
]

sources = [
    'main.cpp',
    'TibeeBuild.cpp',
]

app_env = env.Clone()

app_env.Append(LIBS=libs)
app_env.ParseConfig('pkg-config --cflags glib-2.0')

app = app_env.Program(target=target, source=sources)

Return('app')
